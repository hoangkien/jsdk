<div class="modal" id="myModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h2>1 sản phẩm đã được thêm vào giỏ hàng.</h2>
        </div>
        <div class="modal-body">
          <div class="fastCartTop">
            <div class="fastCartThumb">
              <%= link_to image_tag(@product.image.url()), show_path(@product) if @product %>
            </div>
            <div class="fastCartItemBox">
              <div>
                <%= link_to @product.name, show_path(@product) if @product%>
              </div>
              <div>
                <em class="productPrice"><%= @product.price if @product %> ₫</em>
              </div>
              <div class="quantity">
                Số lượng: <span>4 </span>
              </div>
            </div>
            <div class="fastCartSummaryBox">
              <div class="subtotal">Trị giá đơn hàng: <em class="productPrice"><%= @total if @total %> ₫</em></div>
              <div>Giỏ hàng của bạn hiện có <span id="fastCartNumItemsTxt"><%= @quantity if @quantity%></span> sản phẩm</div>
            </div>
            <div class="order-button-container">
              <a href="/checkout.aspx" class="button"><span>Đặt hàng và thanh toán</span></a>
              <a href="/account/cart.html" class="button"><span>Xem giỏ hàng</span></a>
              <a href="javascript:;" class="button" onclick="$j.fancybox.close();"><span>Mua thêm sản phẩm</span></a>
            </div>
            <div class="clear"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
